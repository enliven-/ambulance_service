



      <%= form_tag({controller: "ambulances", action: "search"}, method: "get") do %>
           
        <div class="row">
          <div class="medium-12 columns">
            <%= label_tag(:patient_address_label, "Patient Address :") %>
            <%= text_field_tag(:patient_address, nil, placeholder: 'e.g. A201 Ashwani Paradise') %>
          </div>
        </div>

        <div class="row">
          <div class="medium-6 columns">
            <%= label_tag(:patient_phone_label, "Patient Phone :") %>
            <%= text_field_tag(:patient_phone, nil, placeholder: 'e.g. 9888193362') %>
          </div>
          <div class="medium-6 columns">
            <%= label_tag(:patient_name_label,  "Patient Name :") %>
            <%= text_field_tag(:patient_name) %>
          </div>
        </div>


        <div class="row">
          <br />
        </div>

        <div class="row">
          <div class="medium-9 columns">
            <%= label_tag(:emergency_type, "Type of Emergency :") %>
            
            <span class="em-radio">
            <%= radio_button_tag :emergency_type, 1 %>
            <%= label_tag :emergency_type, "Van", value: 1 %>
            </span>

            <span class="em-radio">
            <%= radio_button_tag :emergency_type, 2 %>
            <%= label_tag :emergency_type, "First Aid", value: 2 %>
            </span>

            <span class="em-radio">
            <%= radio_button_tag :emergency_type, 3 %>
            <%= label_tag :emergency_type, "Cardiac", value: 3 %>
            </span>

          </div>


          <div class="medium-3 columns">
            <input class="button small radius" name="commit" type="submit" value="Submit">
          </div>
        </div>
      <% end %>



<style>
.em-radio {
  padding: 10px;
  border:  10px;
}
</style>